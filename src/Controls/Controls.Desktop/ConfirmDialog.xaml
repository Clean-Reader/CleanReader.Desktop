<local:CustomDialog
    x:Class="CleanReader.App.Controls.ConfirmDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:CleanReader.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:res="using:CleanReader.Models.Resources"
    Title="{x:Bind res:StringResources.Tip}"
    CloseButtonText="{x:Bind res:StringResources.Cancel}"
    DefaultButton="Primary"
    PrimaryButtonText="{x:Bind res:StringResources.Confirm}"
    mc:Ignorable="d">

    <Grid>
        <TextBlock
            x:Name="ContentBlock"
            MaxWidth="360"
            LineHeight="24"
            TextWrapping="Wrap" />
    </Grid>
</local:CustomDialog>

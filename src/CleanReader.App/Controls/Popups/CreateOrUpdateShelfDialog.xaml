<local:CustomDialog
    x:Class="CleanReader.App.Controls.CreateOrUpdateShelfDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:CleanReader.App.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:res="using:CleanReader.Models.Resources"
    CloseButtonText="{x:Bind res:StringResources.Cancel}"
    DefaultButton="Primary"
    PrimaryButtonText="{x:Bind res:StringResources.Save}"
    mc:Ignorable="d">

    <Grid Width="300">
        <TextBox
            x:Name="ShelfBox"
            HorizontalAlignment="Stretch"
            PlaceholderText="{x:Bind res:StringResources.ShelfPlaceholder}"
            TextChanged="OnTextChanged" />
    </Grid>
</local:CustomDialog>

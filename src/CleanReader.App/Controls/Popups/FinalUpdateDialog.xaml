<?xml version="1.0" encoding="utf-8" ?>
<ContentDialog
    x:Class="CleanReader.App.Controls.Popups.FinalUpdateDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:CleanReader.App.Controls.Popups"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:res="using:CleanReader.Models.Resources"
    Title="{x:Bind res:StringResources.FinalUpdate}"
    Style="{StaticResource DefaultContentDialogStyle}"
    CloseButtonText="{x:Bind res:StringResources.Cancel}"
    DefaultButton="Primary"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClickAsync"
    PrimaryButtonText="{x:Bind res:StringResources.OpenForm}"
    mc:Ignorable="d">

    <Grid Width="320">
        <controls:MarkdownTextBlock
            x:Name="MainBlock"
            Background="Transparent"
            LinkClicked="OnLinkClickedAsync"
            TextWrapping="Wrap" />
    </Grid>
</ContentDialog>
